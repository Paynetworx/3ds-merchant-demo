{
    "version": "2.0.2",
    "compilerOptions": {
        "lib": ["es5", "es2015.promise", "dom", "es2015"],
        "target": "es5",
        "typeRoots": [
          "node_modules/@types",
          "./types/*"
        ],
        "outDir": "dist",
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop":true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "sourceMap": true
    },
    "files":[
        "index.ts"
    ],
    "include":[
        "./types", "./lib"
    ],
    "exclude": [
        "node_modules"
    ]
}
